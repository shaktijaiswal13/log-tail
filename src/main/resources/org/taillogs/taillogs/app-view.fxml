<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.richtext.CodeArea?>
<?import org.fxmisc.flowless.VirtualizedScrollPane?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.taillogs.taillogs.screens.ApplicationController"
            style="-fx-background-color: #ffffff;">
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>

    <!-- TOP: Menu Bar + Controls -->
    <top>
        <VBox spacing="0">
            <!-- Menu Bar placeholder (will be filled by controller) -->
            <HBox fx:id="menuBarContainer" style="-fx-background-color: #2196F3;"/>

            <!-- Control Bar -->
            <HBox spacing="15.0" style="-fx-background-color: #f8f8f8; -fx-padding: 10 15 10 15; -fx-border-color: #eeeeee; -fx-border-width: 0 0 1 0;">
                <!-- Left Controls -->
                <Label fx:id="fileInfoLabel" text="Ready" style="-fx-font-size: 10; -fx-text-fill: #666666;"/>

                <!-- Right Controls -->
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="8.0">
                    <Button fx:id="pauseBtn" text="Tail" minWidth="60" minHeight="28"
                            style="-fx-padding: 6 14 6 14; -fx-font-size: 10; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-width: 0; -fx-border-radius: 3; -fx-font-weight: bold; -fx-cursor: hand;"
                            onAction="#onTogglePause"/>
                    <Button fx:id="clearBtn" text="âœ• Clear" minWidth="65" minHeight="28"
                            style="-fx-padding: 6 14 6 14; -fx-font-size: 10; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-width: 0; -fx-border-radius: 3; -fx-font-weight: bold; -fx-cursor: hand;"
                            onAction="#onClear"/>
                    <Button fx:id="refreshBtn" text="ðŸ”„ Refresh" minWidth="75" minHeight="28"
                            style="-fx-padding: 6 14 6 14; -fx-font-size: 10; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-width: 0; -fx-border-radius: 3; -fx-font-weight: bold; -fx-cursor: hand;"
                            onAction="#onRefresh"/>
                </HBox>
            </HBox>

            <!-- Tab Bar (Open Files as Tabs) -->
            <HBox fx:id="tabBar" style="-fx-background-color: #f0f0f0; -fx-border-color: #dddddd; -fx-border-width: 0 0 1 0; -fx-padding: 0;" minHeight="35"/>
        </VBox>
    </top>

    <!-- CENTER: Main Content Area -->
    <center>
        <VBox spacing="0" style="-fx-background-color: #ffffff;">
            <!-- Search Bar -->
            <HBox spacing="8.0" style="-fx-background-color: #ffffff; -fx-padding: 10 12 10 12; -fx-border-color: #eeeeee; -fx-border-width: 0 0 1 0;">
                <Label text="ðŸ”" style="-fx-font-size: 11; -fx-text-fill: #666666;"/>
                <TextField fx:id="searchField" HBox.hgrow="ALWAYS"
                           style="-fx-font-size: 10; -fx-padding: 5; -fx-border-color: #dddddd; -fx-border-width: 1; -fx-background-color: #f5f5f5;"
                           promptText="Search log content..."/>
            </HBox>

            <!-- Text Display Area with VirtualizedScrollPane -->
            <VirtualizedScrollPane VBox.vgrow="ALWAYS">
                <content>
                    <CodeArea fx:id="logArea"
                              editable="false"
                              wrapText="false"
                              styleClass="code-area"/>
                </content>
            </VirtualizedScrollPane>

            <!-- Status Bar -->
            <Label fx:id="statusLabel" text="Ready" style="-fx-font-size: 8; -fx-text-fill: #666666; -fx-padding: 4 12 4 12; -fx-background-color: #f0f0f0; -fx-border-color: #eeeeee; -fx-border-width: 1 0 0 0;"/>
        </VBox>
    </center>
</BorderPane>
