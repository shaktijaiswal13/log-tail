<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.taillogs.taillogs.screens.SettingsController"
      spacing="15" style="-fx-font-family: 'Courier New'; -fx-font-size: 11; -fx-padding: 20;">

    <!-- Appearance Section -->
    <TitledPane text="Appearance" collapsible="false" style="-fx-font-size: 12; -fx-font-weight: bold;">
        <VBox spacing="15" style="-fx-padding: 15;">

            <!-- Font Size Control -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Font Size:" style="-fx-font-size: 11;" prefWidth="120"/>
                <Spinner fx:id="fontSizeSpinner" min="8" max="24" initialValue="13"
                         editable="true" prefWidth="100"/>
                <Label fx:id="fontSizePreview" text="Preview" style="-fx-font-size: 13; -fx-font-family: 'Courier New';"/>
            </HBox>

            <!-- Font Weight Control -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Font Weight:" style="-fx-font-size: 11;" prefWidth="120"/>
                <ComboBox fx:id="fontWeightCombo" prefWidth="100"/>
                <Label fx:id="fontWeightPreview" text="Preview" style="-fx-font-size: 13; -fx-font-family: 'Courier New';"/>
            </HBox>

            <!-- Background Color Control -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Code Area Background:" style="-fx-font-size: 11;" prefWidth="120"/>
                <ColorPicker fx:id="backgroundColorPicker" prefWidth="100"/>
                <Label fx:id="backgroundColorPreview" text="Preview" style="-fx-font-size: 13; -fx-padding: 5; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-min-width: 80; -fx-text-alignment: CENTER;"/>
            </HBox>

        </VBox>
    </TitledPane>

    <!-- Button Bar -->
    <HBox spacing="10" style="-fx-padding: 10 0 0 0; -fx-alignment: CENTER_RIGHT;">
        <Button fx:id="okBtn" text="OK" minWidth="80"
                style="-fx-padding: 8 20 8 20; -fx-font-size: 11;"/>
        <Button fx:id="cancelBtn" text="Cancel" minWidth="80"
                style="-fx-padding: 8 20 8 20; -fx-font-size: 11;"/>
    </HBox>

</VBox>
