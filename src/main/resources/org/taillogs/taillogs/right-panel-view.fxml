<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.taillogs.taillogs.screens.RightPanelController" spacing="0" style="-fx-background-color: #f5f5f5; -fx-border-color: #dddddd; -fx-border-width: 0 0 0 1;">

    <!-- Tab Bar -->
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-tab-min-width: 90;">
        <!-- Highlights Tab -->
        <Tab text="Highlights" closable="false">
            <VBox spacing="8" style="-fx-padding: 8;">
                <Button fx:id="addHighlightBtn" text="+ Add Highlight Pattern" style="-fx-padding: 6 12; -fx-font-size: 11;" />
                <Separator />
                <ListView fx:id="highlightsListView" VBox.vgrow="ALWAYS" prefHeight="300" />
            </VBox>
        </Tab>

        <!-- Filters Tab -->
        <Tab text="Filters" closable="false">
            <VBox spacing="8" style="-fx-padding: 8;">
                <Button fx:id="addFilterBtn" text="+ Add Filter" style="-fx-padding: 6 12; -fx-font-size: 11;" />
                <Separator />
                <ListView fx:id="filtersListView" VBox.vgrow="ALWAYS" prefHeight="300" />
                <Button fx:id="clearFiltersBtn" text="Clear All Filters" style="-fx-padding: 6 12; -fx-font-size: 11;" />
            </VBox>
        </Tab>

        <!-- Bookmarks Tab -->
        <Tab text="Bookmarks" closable="false">
            <VBox spacing="8" style="-fx-padding: 8;">
                <Label text="Click line numbers to bookmark" style="-fx-text-fill: #666; -fx-font-size: 10;" wrapText="true" />
                <Separator />
                <ListView fx:id="bookmarksListView" VBox.vgrow="ALWAYS" prefHeight="300" />
                <Button fx:id="clearBookmarksBtn" text="Clear All Bookmarks" style="-fx-padding: 6 12; -fx-font-size: 11;" />
            </VBox>
        </Tab>
    </TabPane>
</VBox>
